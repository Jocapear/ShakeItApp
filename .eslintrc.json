{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "plugins": ["react", "prettier"],
    "env": {
        "browser": true,
        "jasmine": true,
        "jest": true
    },
    "rules": {
        "react/no-unescaped-entities": "off",
        "react/prop-types": "off",
        "prettier/prettier": [
            "warn",
            {
                "singleQuote": true,
                "trailingComma": "es5"
            }
        ]
    },
    "settings": {
        "react": {
        "pragma": "React",
        "version": "detect"
        }
    },
    "parser": "babel-eslint"
}
